<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="transfer">

	<select id="selectpayend" parameterType="transferDTO" resultMap="rs">
		SELECT * FROM finance_transfer_test
		WHERE finance_id = #{finance_id}
	</select>

	<resultMap type="transferDTO" id="rs">
		<result property="id" column="id" />
		<result property="finance_id" column="finance_id" />
		<result property="action_type" column="action_type" />
		<result property="item" column="item" />
		<result property="amount_usd" column="amount_usd" />
		<result property="amount_krw" column="amount_krw" />
		<result property="amount_hdc" column="amount_hdc" />
		<result property="closed_date" column="closed_date" />
		<result property="note" column="note" />
	</resultMap>

	<select id="selectAll" resultMap="rs">
		SELECT * FROM finance_transfer_test
	</select>

	<insert id="payinsert" parameterType="transferDTO">
		INSERT INTO finance_transfer_test (id, finance_id, closed_date)
		VALUES(null, #{finance_id}, now())
	</insert>
	
	<insert id="insertAll" parameterType="transferDTO">
		INSERT INTO finance_transfer_test
		VALUES(null, #{finance_id}, #{action_type}, #{item}, null, #{amount_krw}, #{amount_hdc}, now(), #{note})
	</insert>
	
	<update id="updateSomething" parameterType="transferDTO">
		UPDATE tablename1
		SET
		columnname1=#{param1}
		WHERE
		columnname2 = #{param2}
	</update>

	<delete id="deleteSomething" parameterType="transferDTO">
		DELETE FROM tablename1 WHERE
		columnname1 = #{param1}
	</delete>

</mapper>
